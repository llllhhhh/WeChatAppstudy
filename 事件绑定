handletap(e){
    console.log(e);
    const operator = e.currentTarget.dataset.operation
    this.setData({
      num:this.data.num+operator
    })
  }
  
  
<button bindtap="handletap" data-operation="{{1}}" >+</button>
<button bindtap="handletap" data-operation="{{-1}}">-</button>
<view>{{num}}</view>
